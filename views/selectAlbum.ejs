<%- include('partials/header.ejs'); -%>
<div class="row explore-row mx-0">
  <div class="col-md-6 branding-window px-0">
    <div class="h-discore-container">
      <h2>Score</h2>
      <div class="review-divider"></div>
      <ul class="score-steps">
        <li class="score-inactive">
          <span class="score-num">01</span>Search artist
        </li>
        <li class="score-inactive">
          <span class="score-num">02</span>Confirm artist
        </li>
        <li class="score-active fadeIn">
          <span class="score-num">03</span>Select album
        </li>
        <li class="score-inactive"><span class="score-num">04</span>Score</li>
      </ul>
    </div>
    <div class="wave-mask"></div>
    <img
      class="wave-titan"
      src="images/soundwave_1_cropped.png"
      alt="sound wave"
    />
    <div class="collapsed-line"></div>
  </div>
  <div class="col-md-6 dial-pad-window px-0">
    <div class="explore-divider"></div>
    <div class="dial-pad">
      <div class="select-window">
        <!-- Confirm artist from mb API query form -->
        <form action="/select-album" method="POST" class="select-album-form">
          <h2>Choose album from selection</h2>
          <% selectAlbumArr.forEach((item)=>{ %>
          <button
            class="neon-key confirm-artist-btn"
            name="mbAlbumId"
            value="<%= item.id %>"
          >
            <h2><%= item.title %></h2>
            <p class="body-text">Year: <%= item["first-release-date"] %></p>
            <p class="body-text">
              Type: <%= item["primary-type"] %> <% if
              (item["secondary-types"].length !== 0){ %> / <%=
              item["secondary-types"] %> <% } %>
            </p>
          </button>
          <% }); %>
        </form>
      </div>
      <a href="/score" class="neon-key select-btn"
        ><i class="fa-solid fa-arrow-left button-icon"></i>Back</a
      >
    </div>
  </div>
</div>
<%- include('partials/footer.ejs'); -%>
