<%- include('partials/header.ejs'); -%>
<div class="row explore-row mx-0">
  <div class="col-md-6 branding-window px-0">
    <div class="h-discore-container">
      <h2>You are currently editing</h2>
      <div class="review-divider"></div>
      <div class="editing-album-container">
        <img
          src="images/discoreLogo.png"
          alt="discore logo"
          class="discore-score"
        />
        <!-- Receive current review and map data -->
        <div class="edit-album-details-container">
          <h2 class="h-artist">
            Artist: <span class="body-text"><%= artistName %></span>
          </h2>
          <h2 class="h-album">
            Album: <span class="body-text"><%= albumName %></span>
          </h2>
          <h2 class="h-year">
            Year: <span class="body-text"><%= yearNumber %></span>
          </h2>
        </div>
      </div>
    </div>
    <div class="wave-mask"></div>
    <img
      class="wave-titan"
      src="images/soundwave_1_cropped.png"
      alt="sound wave"
    />
    <div class="collapsed-line"></div>
  </div>
  <div class="col-md-6 dial-pad-window px-0">
    <div class="explore-divider"></div>
    <div class="dial-pad">
      <!-- If refReq includes delete-my-review render -->
      <form action="/confirm-delete" method="POST" autocomplete="off">
        <h2>Are you sure you want to delete this?</h2>
        <p class="body-text">
          Confirming will permanently delete the selected review and associated
          data. This action cannot be undone.
        </p>
        <button
          class="neon-key select-btn"
          type="submit"
          name="deleteConfirmId"
          value="<%= reviewId %>"
        >
          <i class="fa-solid fa-trash button-icon"></i> Delete
        </button>
        <a href="/my-reviews" class="neon-key select-btn">Cancel</a>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs'); -%>
